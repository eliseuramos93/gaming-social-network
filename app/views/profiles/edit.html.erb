<%= form_with model: @profile do |f|%>
    <div class="form-text-div">
        <%= f.label :full_name %>
        <%= f.text_field :full_name %>
    </div>

    <div class="form-text-area-div">
        <%= f.label :bio %>
        <%= f.text_area :bio %>
    </div>

    <div class="form-text-div">
        <%= f.label :country %>
        <%= f.text_field :country %>
    </div>

    <div class="form-date-div">
        <%= f.label :birth_date %>
        <%= f.date_field :birth_date %>
    </div>

    <%= f.submit t('buttons.save_changes') %>
<% end %>